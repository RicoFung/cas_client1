<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
  
<mapper namespace="admin.entity.Model">
      <!-- 自动生成id策略 -->
    <insert id="add" parameterType="admin.entity.Model" useGeneratedKeys="true" keyProperty="id">  
       	insert into tb_model(pid,name,sort) values (#{m.pid},#{m.name},#{m.sort})  
    </insert>  
	
	<delete id="del" parameterType="admin.entity.Model">
		delete from tb_model where id = #{id}
	</delete>
	
	<update id="upd" parameterType="admin.entity.Model">
		update tb_model set
		   pid = #{m.pid},
		  name = #{m.name},
		  sort = #{m.sort}
		where id = #{m.id}
	</update>

	<resultMap type="admin.entity.Model" id="result">
		<id property="m.id" column="id"/>
		<result property="m.pid" column="pid"/>
		<result property="m.name" column="name"/>
		<result property="m.sort" column="sort"/>
		<result property="m.catname" column="catname"/>
	</resultMap>
  	
	<sql id="columns_l">
		t.id ID, t.pid PID, t.name NAME, t.sort SORT, t1.name CATNAME
	</sql>
	<sql id="columns_o">
		t.id, t.pid, t.name, t.sort
	</sql>
	
	<sql id="page">
		<if test="offset!=null and limit!=null"> limit #{offset,javaType=String,jdbcType=NUMERIC}, #{limit,javaType=String,jdbcType=NUMERIC} </if>
	</sql>
	
	<sql id="dynamicWhere">
		<where>
			<if test="pid != null and pid != ''"> and t.PID = #{pid} </if>
			<if test="name != null and name != ''"> and t.NAME like concat('%',#{name},'%') </if>
		</where>
	</sql>	
	
	<select id="getById" resultMap="result">
		select <include refid="columns_o"/> from tb_model t where t.id = #{id}
	</select>
	
	<select id="get" resultType="list" resultMap="result">
		select <include refid="columns_l"/> from tb_model t
		  left join tb_category t1 on t.pid = t1.id
		<include refid="dynamicWhere" /> order by t.sort 
		<include refid="page" />
	</select>
	
	<select id="getCount" resultType="int">
		select count(1) from tb_model t
		<include refid="dynamicWhere" />
	</select>
</mapper>  
